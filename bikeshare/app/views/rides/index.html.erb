<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Start latitude</th>
      <th>Start longitude</th>
      <th>End latitude</th>
      <th>End longitude</th>
      <th>Initial cost</th>
      <th>Minute cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.start %></td>
        <td><%= ride.end %></td>
        <td><%= ride.start_latitude %></td>
        <td><%= ride.start_longitude %></td>
        <td><%= ride.end_latitude %></td>
        <td><%= ride.end_longitude %></td>
        <td><%= ride.initial_cost %></td>
        <td><%= ride.minute_cost %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

