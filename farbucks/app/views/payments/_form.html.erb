<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount %>
    <%= number_to_currency(@order.subtotal) %>
    <%= form.hidden_field :amount, value: @order.subtotal %>
    <%= form.hidden_field :order_id, value: @order.id %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
	<%= form.label :card_number %>
	<%= form.text_field :card_number%>
</div>

<div class="field">
	<%= form.label :card_expires_on %>
	<%= form.date_select :card_expires_on,
	:discard_day => true,
	:start_year => (Date.today.year + 4),
	:end_year => (Date.today.year + 12)
	%>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
