<p id="notice"><%= notice %></p>

<h1>Menu Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_categories.each do |menu_category| %>
      <tr>
        <td><%= menu_category.name %></td>
        <td><%= link_to 'Show', menu_category %></td>
        <td><%= link_to 'Edit', edit_menu_category_path(menu_category) %></td>
        <td><%= link_to 'Destroy', menu_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu Category', new_menu_category_path %>
